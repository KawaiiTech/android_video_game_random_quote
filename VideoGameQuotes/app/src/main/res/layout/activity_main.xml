<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@android:color/black"
    tools:context="eu.laramartin.videogamequotes.MainActivity">

    <ImageView
        android:id="@+id/arcade_imageview"
        android:layout_width="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/arcade_machine3"
        android:layout_above="@+id/linearLayout"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/quote_textView"
        android:text="Thank you Mario! But our Princess is in another castle!"
        android:layout_width="wrap_content"
        android:layout_height="170dp"
        android:textSize="20sp"
        android:background="@android:color/white"
        android:layout_alignTop="@+id/arcade_imageview"
        android:layout_alignLeft="@+id/arcade_imageview"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="70dp"
        android:layout_marginRight="70dp"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/autor_quote_textView"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="-- Toad"
        android:layout_below="@+id/quote_textView"
        android:layout_alignLeft="@+id/quote_textView"
        android:layout_alignStart="@+id/quote_textView"
        android:layout_alignRight="@+id/quote_textView"
        android:layout_alignEnd="@+id/quote_textView" />

    <TextView
        android:id="@+id/video_game_textView"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="ðŸŽ® Super Mario Bros."
        android:layout_below="@+id/autor_quote_textView"
        android:layout_centerHorizontal="true" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="16dp"
        android:paddingTop="16dp"
        android:id="@+id/linearLayout"
        android:layout_alignParentBottom="true">

        <Button
            android:layout_width="0dp"
            android:layout_height="64dp"
            android:layout_weight="1"
            android:id="@+id/share_button"
            android:layout_alignParentBottom="true"
            android:layout_alignRight="@+id/quote_textView"
            android:layout_alignEnd="@+id/quote_textView"
            android:text="new quote"
            android:backgroundTint="@color/accent"  />

        <Button
            android:id="@+id/generate_quote_button"
            android:layout_width="0dp"
            android:layout_height="64dp"
            android:layout_weight="1"
            android:layout_alignTop="@+id/share_button"
            android:layout_alignLeft="@+id/quote_textView"
            android:layout_alignStart="@+id/quote_textView"
            android:drawableLeft="@android:drawable/ic_menu_share"
            android:text="share"
            android:backgroundTint="@color/accent"/>
    </LinearLayout>


</RelativeLayout>
